<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF4F6"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/account_image"
            android:layout_width="48.dp"
            android:layout_height="48.dp"
            android:layout_marginStart="16.dp"
            android:layout_marginTop="40.dp"
            android:src="@drawable/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <!-- header-->
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.dp"
            android:layout_marginEnd="16.dp"
            android:fontFamily="@font/ipm_mediem_sens_arabic"
            android:text="Hi, Jerry ðŸ‘‹ðŸ»"
            android:textColor="#1F1F1E"
            android:textSize="14.sp"
            app:layout_constraintEnd_toStartOf="@+id/notification_icon"
            app:layout_constraintStart_toEndOf="@+id/account_image"
            app:layout_constraintTop_toTopOf="@id/account_image" />

        <TextView
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_regular_plex_sans_arabic"
            android:text="Which Tom do you want to buy?"
            android:textColor="#A5A6A4"
            android:textSize="12.sp"
            app:layout_constraintEnd_toEndOf="@id/welcome_message"
            app:layout_constraintStart_toStartOf="@+id/welcome_message"
            app:layout_constraintTop_toBottomOf="@id/welcome_message" />

        <LinearLayout
            android:id="@+id/notification_icon"
            android:layout_width="40.dp"
            android:layout_height="40.dp"
            android:layout_marginEnd="16.dp"
            android:background="@drawable/strock_rectangle"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/account_image">

            <ImageView
                android:layout_width="24.dp"
                android:layout_height="24.dp"
                android:src="@drawable/notification_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/account_image" />
        </LinearLayout>

        <TextView
            android:layout_width="14.dp"
            android:layout_height="14.dp"
            android:layout_marginStart="27.dp"
            android:layout_marginBottom="30.dp"
            android:background="@drawable/blue_circle"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="10.sp"
            app:layout_constraintBottom_toBottomOf="@id/notification_icon"
            app:layout_constraintStart_toStartOf="@id/notification_icon" />

        <!-- header-->

        <!-- search field -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_input_field"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12.dp"
            android:layout_marginEnd="8.dp"
            android:background="@drawable/rectangle_with_corner"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="8.dp"
            android:fontFamily="@font/ibm_regular_plex_sans_arabic"
            android:hint="Search about tom ..."
            android:lines="1"
            android:padding="16.dp"
            android:textColorHint="#969799"
            android:textSize="14.sp"
            app:layout_constraintEnd_toStartOf="@+id/sittings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_image" />

        <LinearLayout
            android:id="@+id/sittings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16.dp"
            android:background="@drawable/color_rectangle_with_radius"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/search_input_field"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_input_field">

            <ImageView
                android:layout_width="19.5dp"
                android:layout_height="17.5dp"
                android:src="@drawable/sitting_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/account_image" />
        </LinearLayout>
        <!-- search field -->

        <!-- discount card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/offer_card"
            android:layout_width="match_parent"
            android:layout_height="96.dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24.dp"
            android:background="@drawable/rectangle_with_gradient"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/search_input_field">
            <ImageView
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/oval"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.dp"
            android:layout_marginTop="12.dp"
            android:lines="1"
            android:text="Buy 1 Tom and get 2 for free"
            android:textColor="#FFFFFF"
            android:textSize="16.sp"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            app:layout_constraintStart_toStartOf="@id/offer_card"
            app:layout_constraintTop_toTopOf="@id/offer_card" />

        <TextView
            android:id="@+id/offer_text_description"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.dp"
            android:lines="2"
            android:textSize="12.sp"
            android:layout_marginEnd="24.dp"
            android:fontFamily="@font/ibm_regular_plex_sans_arabic"
            android:text="Adopt Tom! (Free Fail-Free Guarantee)"
            android:textColor="#CCFFFFFF"
            app:layout_constraintStart_toStartOf="@id/offer_text"
            app:layout_constraintEnd_toEndOf="@id/offer_text"
            app:layout_constraintTop_toBottomOf="@id/offer_text" />

        <ImageView
            android:layout_width="120.dp"
            android:layout_height="119.5dp"
            android:layout_marginTop="4.dp"
            android:src="@drawable/tom_money"
            app:layout_constraintEnd_toEndOf="@id/offer_card"
            app:layout_constraintTop_toBottomOf="@id/search_input_field" />

        <!-- discount card -->

        <!-- Cheap tom section -->
        <TextView
            android:id="@+id/section_name"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/offer_card"
            android:text="Cheap tom section"
            android:textSize="20.sp"
            android:textColor="#1F1F1E"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:layout_marginTop="24.dp"
            android:layout_marginStart="16.dp"/>

        <TextView
            android:id="@+id/view_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.sp"
            android:text="View all"
            android:textColor="#03578A"
            android:fontFamily="@font/ipm_mediem_sens_arabic"
            android:layout_marginEnd="4.dp"
            app:layout_constraintEnd_toStartOf="@+id/arrow"
            app:layout_constraintTop_toTopOf="@id/section_name"
            app:layout_constraintBottom_toBottomOf="@id/section_name"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/offer_card"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/arrow_right"

            android:layout_marginEnd="16.dp"
            app:layout_constraintTop_toTopOf="@id/view_all_text"
            app:layout_constraintBottom_toBottomOf="@id/view_all_text"/>



        <!-- Cheap tom section -->


        <!-- first two item -->
        <View
            android:id="@+id/first_item"
            android:layout_width="0.dp"
            android:layout_height="219.dp"
            android:background="@drawable/rectangle_white_color"
            app:layout_constraintTop_toBottomOf="@id/section_name"
            android:layout_marginEnd="8.dp"
            android:layout_marginStart="16.dp"
            android:layout_marginTop="32.dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/second_item"/>
        <ImageView
            android:id="@+id/first_item_image"
            android:layout_width="0.dp"
            android:layout_height="100.dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/first_item"
            android:src="@drawable/tom_eat"
            app:layout_constraintStart_toStartOf="@id/first_item"
            app:layout_constraintEnd_toEndOf="@id/first_item"
            android:layout_marginBottom="135.dp"/>
        <TextView
            android:id="@+id/first_item_title"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:text="Sport Tom"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="18.sp"
            android:textColor="#1F1F1E"
            app:layout_constraintTop_toBottomOf="@id/first_item_image"
            app:layout_constraintStart_toStartOf="@id/first_item"
            app:layout_constraintEnd_toEndOf="@id/first_item"
            android:gravity="center"
            android:layout_marginHorizontal="8.dp"/>
        <TextView
            android:id="@+id/first_item_des"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:text="He runs 1 meter... trips over his boot."
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="12.sp"
            android:textColor="#969799"
            app:layout_constraintTop_toBottomOf="@id/first_item_title"
            app:layout_constraintStart_toStartOf="@id/first_item"
            app:layout_constraintEnd_toEndOf="@id/first_item"
            android:gravity="center"
            android:layout_marginHorizontal="8.dp"/>
        
        <LinearLayout
            android:id="@id/price"
            android:layout_width="0.dp"
            android:layout_height="wrap_content"
            android:layout_margin="8.dp"
            android:gravity="start|center"
            android:background="@drawable/rectangle_blue_color"
            android:paddingHorizontal="10.dp"
            android:paddingVertical="6.dp"
            app:layout_constraintStart_toStartOf="@id/first_item"
            app:layout_constraintEnd_toStartOf="@id/bag"
            app:layout_constraintBottom_toBottomOf="@id/first_item">
            <ImageView
                android:layout_width="20.dp"
                android:layout_height="20.dp"
                android:src="@drawable/money_bag"
                android:layout_marginEnd="2.dp"/>
            <TextView
                android:id="@+id/price_before_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strike_text"
                android:gravity="bottom"
                android:fontFamily="@font/ipm_mediem_sens_arabic"
                android:textColor="#03578A"
                android:textSize="12.sp"
                />
            <TextView
                android:id="@+id/price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 3 cheeses"
                android:gravity="bottom"
                android:fontFamily="@font/ipm_mediem_sens_arabic"
                android:textColor="#03578A"
                android:textSize="12.sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bag"
            android:layout_width="40.dp"
            android:layout_height="0.dp"
            android:layout_marginEnd="8.dp"
            android:background="@drawable/strock_rectangle_blue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            app:layout_constraintEnd_toEndOf="@id/first_item">

            <ImageView
                android:layout_width="16.dp"
                android:layout_height="16.dp"
                android:src="@drawable/add_to_cart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/account_image" />
        </LinearLayout>

        <View
            android:id="@+id/second_item"
            android:layout_width="0dp"
            android:layout_height="219dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_white_color"
            app:layout_constraintTop_toTopOf="@id/first_item"
            app:layout_constraintStart_toEndOf="@+id/first_item"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/second_item_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/second_item"
            android:src="@drawable/tom_lover"
            app:layout_constraintStart_toStartOf="@id/second_item"
            app:layout_constraintEnd_toEndOf="@id/second_item"
            android:layout_marginBottom="135dp"/>

        <TextView
            android:id="@+id/second_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tom the lover"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="18sp"
            android:textColor="#1F1F1E"
            app:layout_constraintTop_toBottomOf="@id/second_item_image"
            app:layout_constraintStart_toStartOf="@id/second_item"
            app:layout_constraintEnd_toEndOf="@id/second_item"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/second_item_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="He loves one-sidedly... and is beaten by the other side."
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="12sp"
            android:textColor="#969799"
            app:layout_constraintTop_toBottomOf="@id/second_item_title"
            app:layout_constraintStart_toStartOf="@id/second_item"
            app:layout_constraintEnd_toEndOf="@id/second_item"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <LinearLayout
            android:id="@+id/second_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="start|center"
            android:background="@drawable/rectangle_blue_color"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="@id/second_item"
            app:layout_constraintEnd_toStartOf="@id/second_bag"
            app:layout_constraintBottom_toBottomOf="@id/second_item">

            <ImageView
                android:layout_width="20.dp"
                android:layout_height="20.dp"
                android:src="@drawable/money_bag"
                android:layout_marginEnd="2.dp"/>

            <TextView
                android:id="@+id/second_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 cheeses"
                android:gravity="bottom"
                android:fontFamily="@font/ipm_mediem_sens_arabic"
                android:textColor="#03578A"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_bag"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/strock_rectangle_blue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/second_price"
            app:layout_constraintBottom_toBottomOf="@id/second_price"
            app:layout_constraintEnd_toEndOf="@id/second_item">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/add_to_cart" />
        </LinearLayout>


        <!-- first two item -->

        <!-- Second row - first item -->
        <View
            android:id="@+id/first_item_row2"
            android:layout_width="0dp"
            android:layout_height="219dp"
            android:background="@drawable/rectangle_white_color"
            app:layout_constraintTop_toBottomOf="@id/first_item"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/second_item_row2"/>

        <ImageView
            android:id="@+id/first_item_row2_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/first_item_row2"
            android:src="@drawable/tom_the_bomb"
            app:layout_constraintStart_toStartOf="@id/first_item_row2"
            app:layout_constraintEnd_toEndOf="@id/first_item_row2"
            android:layout_marginBottom="135dp"/>

        <TextView
            android:id="@+id/first_item_row2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tom the bomb"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="18sp"
            android:textColor="#1F1F1E"
            app:layout_constraintTop_toBottomOf="@id/first_item_row2_image"
            app:layout_constraintStart_toStartOf="@id/first_item_row2"
            app:layout_constraintEnd_toEndOf="@id/first_item_row2"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/first_item_row2_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="He blows himself up before Jerry can catch him."
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="12sp"
            android:textColor="#969799"
            app:layout_constraintTop_toBottomOf="@id/first_item_row2_title"
            app:layout_constraintStart_toStartOf="@id/first_item_row2"
            app:layout_constraintEnd_toEndOf="@id/first_item_row2"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <LinearLayout
            android:id="@+id/first_item_row2_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="start|center"
            android:background="@drawable/rectangle_blue_color"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="@id/first_item_row2"
            app:layout_constraintEnd_toStartOf="@id/first_item_row2_bag"
            app:layout_constraintBottom_toBottomOf="@id/first_item_row2">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/money_bag"
                android:layout_marginEnd="2dp"/>


            <TextView
                android:id="@+id/first_item_row2_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 cheeses"
                android:gravity="bottom"
                android:fontFamily="@font/ipm_mediem_sens_arabic"
                android:textColor="#03578A"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_item_row2_bag"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/strock_rectangle_blue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/first_item_row2_price"
            app:layout_constraintBottom_toBottomOf="@id/first_item_row2_price"
            app:layout_constraintEnd_toEndOf="@id/first_item_row2">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/add_to_cart" />
        </LinearLayout>


        <!-- Second row - second item -->
        <View
            android:id="@+id/second_item_row2"
            android:layout_width="0dp"
            android:layout_height="219dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_white_color"
            app:layout_constraintTop_toTopOf="@id/first_item_row2"
            app:layout_constraintStart_toEndOf="@+id/first_item_row2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/second_item_row2_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/second_item_row2"
            android:src="@drawable/spy_tom"
            app:layout_constraintStart_toStartOf="@id/second_item_row2"
            app:layout_constraintEnd_toEndOf="@id/second_item_row2"
            android:layout_marginBottom="135dp"/>

        <TextView
            android:id="@+id/second_item_row2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spy Tom"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="18sp"
            android:textColor="#1F1F1E"
            app:layout_constraintTop_toBottomOf="@id/second_item_row2_image"
            app:layout_constraintStart_toStartOf="@id/second_item_row2"
            app:layout_constraintEnd_toEndOf="@id/second_item_row2"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/second_item_row2_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disguises itself as a table."
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:textSize="12sp"
            android:textColor="#969799"
            app:layout_constraintTop_toBottomOf="@id/second_item_row2_title"
            app:layout_constraintStart_toStartOf="@id/second_item_row2"
            app:layout_constraintEnd_toEndOf="@id/second_item_row2"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <LinearLayout
            android:id="@+id/second_item_row2_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="start|center"
            android:background="@drawable/rectangle_blue_color"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="@id/second_item_row2"
            app:layout_constraintEnd_toStartOf="@id/second_item_row2_bag"
            app:layout_constraintBottom_toBottomOf="@id/second_item_row2">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/money_bag"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:id="@+id/second_item_row2_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 cheeses"
                android:gravity="bottom"
                android:fontFamily="@font/ipm_mediem_sens_arabic"
                android:textColor="#03578A"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_item_row2_bag"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/strock_rectangle_blue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/second_item_row2_price"
            app:layout_constraintBottom_toBottomOf="@id/second_item_row2_price"
            app:layout_constraintEnd_toEndOf="@id/second_item_row2">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/add_to_cart" />
        </LinearLayout>

        <!-- Third row - first item -->
        <View
            android:id="@+id/first_item_row3"
            android:layout_width="0dp"
            android:layout_height="219dp"
            android:background="@drawable/rectangle_white_color"
            app:layout_constraintTop_toBottomOf="@id/first_item_row2"
